# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset and indentation style
[*.{ts,tsx,js,html,ejs,css,scss,less}]
charset = utf-8
indent_style = space
indent_size = 4

# package.json uses a different indentation style, and we don't want to change it
# since it is autogenerated/autoupdated when installing packages
[package.json]
indent_style = space
indent_size = 2
